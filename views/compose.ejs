<%- include("partials/header"); %>

<h1 class = "compose-title">Compose</h1>
<form action="/compose" method="post" class = "compose-blog">
  <div class="form-group">
    <label for="blogTitle" class = "font-weight-bold">Title</label>
    <input class = "form-control" id = "blogTitle" type="text" name="blogEntry">
  </div>

  <div class="form-group">
    <label for="blogContent" class = "font-weight-bold">Post</label>
    <textarea class = "form-control" id="blogContent" name = "entryContent" rows="4"></textarea>
  </div>

  <button class = "btn btn-dark btn-lg mt-1" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer"); %>
